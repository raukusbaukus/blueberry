	</header>
	<main>
		<section id="landing">
			<!-- <h1>in each of us is a student and a teacher. blueberry helps us be both.</h1> -->
			<!-- SEARCH BAR -->
			<form id="search-form" class="searchform group text-center">
				<label for="search-box">
   					<span class="spanText">What do you want to learn?</span>
  			</label>
				<input autofocus type="search" class="text-center" id="search-box" list="search-tags">
				<datalist id="search-tags">
          {{#each all_tags}}
          	<option>{{this.title}}</option>
        {{/each}}
      	</datalist>
			</form>
			<div class="text-center"><a href="/user/create">I want to teach a subject</a></div>
		</section>
		<!-- EVENTS LIST -->
		<section id="event_list">
			<div class="container">
				<h2 class="text-center">Upcoming Lessons</h2>
				<ul class="list-group container margin-top-2rem">
					{{#each events}}
						<li class="list-group-item event row">
							<a href="/event/read/{{this.id}}">
								<div class="col-xs-6">
									<div>
										{{this.location.title}} <span class="opacity-5">{{this.location.area}}</span></div>
									<h3>{{this.title}}</h3>
									<div><strong>{{this.date}}</strong> {{this.start}} - {{this.end}}
									</div>
								</div>
								<div class="col-xs-6 text-right">
									<ul class="tag-list">
										{{#each this.tags}}
											<li class="tag">
												<a href="/events">
												{{this}}
											</a>
											</li>
										{{/each}}
									</ul>
									<div>
										<div class="event_user">
											<a href="/user/read/{{this.host.id}}">
												<img class="event_avatar" alt="user photo" src="{{this.host.avatar}}">
												<span>{{this.host.display_name}}</span>
											</a>
										</div>
										<div>xp {{this.host.xp}} | <img alt="star" src="/img/star.png" style="height: 1em"> {{this.host.rating}}
										</div>
									</div>
								</div>

						</li>
						</a>
					{{/each}}
				</ul>
			</div>
		</section>
