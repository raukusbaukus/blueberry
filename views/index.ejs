	<title>BlueBerry</title>
</head>

<body>
	<header>
		<div class="container-fluid header">
			<div class="row">
 				<div class="col-md-6 logo">
 					<h1>BlueBerry</h1>
 				</div>
  				<div class="col-md-6">
					<nav class="nav-top">
                		<ul>
		                  <li><a href="#">Sign-In</a></li>
		                  <li><a href="#">Sign-Up</a></li>
		               </ul>
             		 </nav>
  				</div>
			</div>
		</div>
	</header>
	<main>
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<h1 class="description">This is the description of our app!</h1>
				</div>
			</div>
			</div>
			<!-- SEARCH BAR -->
			<div class="container-fluid">
			<div class="row search">
				<div class="col-md-12 search-bar">
					<form class="searchform group">
  					<label for="search-box">
   						 <span class="spanText">What do you want to learn?!</span>
  					</label>
 					<input type="search" id="search-box" placeholder="JavaScript">
					</form>
				</div>
			</div>
		</div>
		<!-- EVENTS LIST -->
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12"> 
				<ul class="list-group">
				<% events.forEach(event => { %>
					   
		   				<li class="list-group-item active"> <%= event.title %> </li>
		   				<li class="list-group-item"> <%= event.location.venue %> </li>
		   				<li class="list-group-item"> <%= event.location.address %> </li>
		   				<li class="list-group-item"> <%= event.location.area %> </li>
		   				<li class="list-group-item"> <%= event.start %> </li>
		   				<li class="list-group-item"> <%= event.skill_level %> </li>
		   				<li class="list-group-item"> <%= event.capacity %> </li>
		   				<li class="list-group-item"> <%= event.end %> </li>
		   				<li class="list-group-item"> <%= event.description %> </li>
		   				<li class="list-group-item"> <%= event.tags %> </li>
		   				<li class="list-group-item"> <%= event.host.avatar %> </li>
		   				<li class="list-group-item"> <%= event.host.display_name %> </li>
		   				<li class="list-group-item"> <%= event.host.rating %> </li>
		   				<li class="list-group-item"> <%= event.host.xp %> </li>
		   				<li class="list-group-item"> <%= event.host.bio %> </li>
					
				<% }); %>
				</ul>
				</div>
			</div>
		</div>


	</main>



