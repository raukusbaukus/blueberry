<!DOCTYPE html>
<html lang="en">
<html>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Jquery -->
	<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
	<!-- BOOTSTRAP -->
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
	<!-- AWESOMEPLETE SEARCH -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.1/awesomplete.css">
	<link rel="stylesheet" type="text/css" href="stylesheets/style.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.1/awesomplete.js"></script>
	<title>BlueBerry</title>
</head>

<body>
	<header class="navbar-fixed-top">
		<nav class="container navbar">
			<a class="navbar-brand" href="#">
				<img alt="blueberry logo" src="/img/logo.png">
			</a>
			<ul class="nav navbar-nav pull-right">
				<li><a href="#">Sign-In</a></li>
				<li><a href="#">Sign-Up</a></li>
			</ul>
		</nav>
	</header>
	<main>
		<section id="landing">
			<h1 class="description">blueberry makes it easy for users to coordinate learning from each other</h1>
			<!-- SEARCH BAR -->
			<form class="searchform group text-center">
				<label for="search-box">
   					<span class="spanText">What do you want to learn?</span>
  			</label>
				<input type="search" class="text-center" id="search-box" list="search-tags" placeholder="JavaScript">
				<datalist id="search-tags">
      	<% all_tags.forEach(tag => { %>
          	<option><%= tag.title %></option>
      	<% }); %>
      	</datalist>
			</form>
			<a>
				<div class="text-center">I want to teach a subject</div>
			</a>
		</section>
		<!-- EVENTS LIST -->
		<section id="event_list">
			<ul class="list-group container">
				<% events.forEach(event => { %>
					<li class="list-group-item row">
						<div class="col-xs-6">
							<%= event.location.title %>
								<%= event.location.area %>
						</div>
						<div class="col-xs-6 text-right">
							<% for(i = 0; i < 3 && i < event.tags.length; i++) { %>
								<span class="event_tag"> #<%= event.tags[i] %></span>
								<% }; %>
						</div>
						<div class="col-xs-12">
							<h3><%= event.title %></h3>
						</div>
						<div class="col-xs-6">
							<strong><%= event.date %></strong>
							<%= event.start %> -
								<%= event.end %>
						</div>
						<div class="col-xs-6 text-right">
							<div>
								<div>
									<%= event.host.display_name %>
								</div>
								<div>xp
									<%= event.host.xp %> | <img alt="star" src="/img/star.png" style="height: 1em">
										<%= event.host.rating %>
								</div>
							</div>
						</div>
					</li>
					<% }); %>
			</ul>
		</section>
	</main>

	<footer>
		<div class="container">
			<p>PRESS</p>
			<p>CONTACT</p>
			<p>SITEMAP</p>
			<p>DONATE</p>
			<p>Â© 2017 All rights reserved</p>
			<p><a href="#">Usage Policy</a></p>
			<p><a href="%">About the Site</a></p>
		</div>
	</footer>
</body>

</html>
